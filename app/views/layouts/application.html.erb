<!DOCTYPE html>
<html>
  <head>
    <title>Chess</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav id='primary_navigation'>
        <% if player_signed_in? %>
          <%= link_to 'Sign Out', destroy_player_session_path, method: :delete %>
          <%= link_to 'Dashboard', player_path(current_player) %>
          <%= link_to 'Join Game', games_path %>
          <%= link_to 'Create Game', new_game_path, method: :get %>
        <% else %>
          <%= link_to 'Sign in', new_player_session_path %>
          <%= link_to 'Sign up', new_player_registration_path %>
          <%= link_to "Sign in with Facebook", player_facebook_omniauth_authorize_path %>
          <%= link_to "Sign in with Google", player_google_oauth2_omniauth_authorize_path %>
        <% end %>
      </nav>
    </header>

    <% if notice.present? %>
      <p class="alert alert-info text-center"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger text-center"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
